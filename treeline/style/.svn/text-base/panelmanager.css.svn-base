div.tl-content div.menu-wrap-wrap table.tl_list {
	width: 347px;
}
	div.tl-content div.menu-wrap-wrap table.tl_list td {
		font-size: 100%;
	}
		div.tl-content div.menu-wrap-wrap table.tl_list td span.title {
			width: auto;
		}
		div.tl-content div.menu-wrap-wrap table.tl_list td.action {
			width: 105px;
		}
			div.tl-content div.menu-wrap-wrap table.tl_list td.action a {
				text-decoration: none;
			}
				div.tl-content div.menu-wrap-wrap table.tl_list td.action a.delete {
					margin-right: 0;
				}
		

ul.message {
	width: 390px;
	margin: 15px 0 0px 15px;
	padding: 10px;
	float: left;
	border: 1px solid #819093;
	background-color: #FEFFB3;
	font-size: 90%;
	color: #819093;
	line-height: 110%;
}
ul.error {
	background-color: #FF9999;
}

