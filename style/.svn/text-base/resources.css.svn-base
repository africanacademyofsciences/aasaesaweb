h1.pagetitle {
	margin-bottom: 0;
}
div#primarycontent {
	width: 711px;
}
form#resource-filters {
	float: left;
	height: 39px;
	padding-bottom: 5px;
	width: 711px;
	background: #e5e5e5 url('/img/layout/resource-bg.gif') bottom left repeat-x;
}

div#primarycontent ul#member-options,
ul#member-options {
	width: 711px;
	border-bottom: 1px solid #999;
	padding: 5px 0px !important;
}
div#primarycontent ul#member-options,
ul#member-options,
div#primarycontent ul#filters,
ul#filters {
	list-style: none;
	float: left;
	padding: 10px 0 0 0
}
	div#primarycontent ul#member-options li ,
	ul#member-options li ,
	div#primarycontent ul#filters li,
	ul#filters li {
		float: left;
		margin-left: 10px;
		border-right: 1px solid #ccc;
		padding-right: 10px;
		line-height: 150%;
		font-weight: bold;
	}
		div#primarycontent ul#filters li a,
		ul#filters li a {
			font-weight: bold;
		}
	div#primarycontent ul#filters li.right,
	ul#filters li.right {
		float: right;
		margin-right: 10px;
		margin-left: 0;
		padding-right: 0;
		border-right: none;
		font-weight: normal;
	}
	



